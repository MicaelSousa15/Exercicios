#Casas
casas = ''
def compra_casa1():
    global dinheiro
    global casas
    if dinheiro > 70000:
        dinheiro -= 70000
        casas += 'Casa Pequena '
        status_casa['text'] = 'Casa(s): '+casas
        global dia
        global ano
        dia += 1
        b_ano['text'] = 'Dia {} Ano {}'.format(dia, ano)
        if dia == 361:
            ano += 1
            dia = 0

