emprego = ''
def emprego_1():
    global emprego
    global faculdade
    if faculdade >= 200:
        faculdade -= 200
        emprego = 'Programador'
        global dia
        global ano
        dia += 1
        b_ano['text'] = 'Dia {} Ano {}'.format(dia, ano)
        if dia == 361:
            ano += 1
            dia = 0
    else:
        print()

