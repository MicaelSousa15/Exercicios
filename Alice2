#------------------------------------------------------------------------------------
genialidade = ''
if escola <= 300:
    genialidade = 'Nenhuma'
    status_genialidade['text'] = 'Genialidade: {}'.format(genialidade)
if escola >= 700:
    genialidade = 'Estudante'
    status_genialidade['text'] = 'Genialidade: {}'.format(genialidade)
if faculdade > 700:
    genialidade = 'Júnior'
    status_genialidade['text'] = 'Genialidade: {}'.format(genialidade)
if faculdade > 1400:
    genialidade = 'Professor'
    status_genialidade['text'] = 'Genialidade: {}'.format(genialidade)
if faculdade > 2000:
    genialidade = 'Mestre'
    status_genialidade['text'] = 'Genialidade: {}'.format(genialidade)
if astronomia > 5000:
    genialidade = 'Gênio'
    status_genialidade['text'] = 'Genialidade: {}'.format(genialidade)

